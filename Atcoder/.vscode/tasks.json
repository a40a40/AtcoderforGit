{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build active file",
      //      "command": "/bin/g++",
      "command": "g++",
      "args": [
        "-g",
        "${file}",
        "-I",
        "${workspaceFolder}/library/ac-library",
        "-std=c++20",
        //"-ftrapv",
        "-o",
        //        "${workspaceFolder}/problem"
        "./problem_${fileBasenameNoExtension}",
        //"-Wall",
        //"-Wextra",
        //"-mtune=native",
        //"-march=native",
        //"-fconstexpr-depth=2147483647",
        //"-fconstexpr-loop-limit=2147483647",
        //"-fconstexpr-ops-limit=2147483647",
      ],
      "options": {
        //        "cwd": "/bin"
        "cwd": "${fileDirname}"
        // "cwd": "./"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
